  "views": [{
      "title": "Titles of textual works",
      "resources": {
        "name": "view1a",
        "data": {
          "url": "https://raw.githubusercontent.com/readchina/ReadAct/master/csv/views/view01a_txt-titles.csv"
        },
        "specType": "vega-lite",
        "spec": {
          "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
          "description": "Textual works by creator excluding unknowns",
          "data": {
            "url": "https://raw.githubusercontent.com/readchina/ReadAct/master/csv/views/view01a_txt-titles.csv"
          },
          "mark": {
            "type": "bar",
            "tooltip": true
          },
          "encoding": {
            "x": {
              "field": "title",
              "type": "ordinal",
              "axis": {
                "labelAngle": 0
              },
              "sort": "-y"
            },
            "y": {
              "aggregate": "count",
              "field": "act_object",
              "type": "quantitative"
            }
          }
        }
      }
    },
    {
      "title": "Titles of non-textual works",
      "resources": {
        "name": "view1b",
        "data": {
          "url": "https://raw.githubusercontent.com/readchina/ReadAct/master/csv/views/view01b_art-titles.csv"
        },
        "specType": "vega-lite",
        "spec": {
          "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
          "description": "Non-textual works by creator excluding unknowns",
          "data": {
            "url": "https://raw.githubusercontent.com/readchina/ReadAct/master/csv/views/view01b_art-titles.csv"
          },
          "mark": {
            "type": "bar",
            "tooltip": true
          },
          "encoding": {
            "x": {
              "field": "title",
              "type": "ordinal",
              "axis": {
                "labelAngle": 0
              },
              "sort": "-y"
            },
            "y": {
              "aggregate": "count",
              "field": "act_object",
              "type": "quantitative"
            }
          }
        }
      }
    },
    {
      "title": "works by creator",
      "resources": {
        "name": "view2",
        "data": {
          "url": "https://raw.githubusercontent.com/readchina/ReadAct/master/csv/views/view02_creator-matrix.csv"
        },
        "specType": "vega-lite",
        "spec":  {
          "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
          "description": "Reading Objects by creator excluding anonymous works",
          "data": {
            "url": "https://raw.githubusercontent.com/readchina/ReadAct/master/csv/views/view02_creator-matrix.csv"
          },
          "transform": [
      {"filter": {"not": {"field": "creator", "equal": "AG0626"}}}
    ],
          "mark": {
            "type": "bar"
          },
          "encoding": {
            "x": {
              "field": "creator",
              "type": "ordinal",
              "axis": {
                "title": "Creator",
                "labelAngle": 0
              },
              "sort": "-y"
            },
            "y": {
              "aggregate": "count",
              "field": "act_object",
              "type": "nominal"
            },
            "color": {
              "field": "act_object",
              "type": "nominal"
            },
             "tooltip": [
              {"field": "title"},
              {"field": "name"},
              {"aggregate": "count"}
            ]
          }
        }
      }
    }
