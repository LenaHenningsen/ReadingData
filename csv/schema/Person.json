{
  "fields": [{
      "name": "person_id",
      "constraints": {
        "required": true,
        "unique": false,
        "max-length": 6,
        "pattern": "AG[0-9]{4}"
      }
    },
    {
      "name": "family_name",
      "constraints": {
        "required": true
      }
    }, {
      "name": "first_name",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "name_lang",
      "constraints": {
        "required": true,
        "pattern": "[a-z]{2,}?"
      }
    }, {
      "name": "sex",
      "constraints": {
        "required": true,
        "pattern": "(male|female|unknown)"
      }
    }, {
      "name": "rustication",
      "description": "One of four values related to 知识青年: 0=NULL, 1=yes, 2=no, 3=unknown",
      "constraints": {
        "required": true,
        "pattern": "[0-3]"
      }
    }, {
      "name": "birthyear",
      "description": "Birthyear in EDTF, XXXX for unknown",
      "constraints": {
        "required": false,
        "pattern": "\\[?(-?[0-9X]{4}[\\.~\\?%,]?\\.?){1,2}\\]?"
      }
    }, {
      "name": "deathyear",
      "description": "Deathyear in EDTF, XXXX for unkown",
      "constraints": {
        "required": false,
        "pattern": "\\[?(-?[0-9X]{4}[\\.~\\?%,]?\\.?){1,2}\\]?"

      }
    }, {
      "name": "alt_name",
      "description": "Pen Name, Pseudonym, etc. matches the language of name",
      "constraints": {
        "required": false
      }
    }, {
      "name": "place_of_birth",
      "constraints": {
        "required": false,
        "pattern": "(^$|NULL|SP[0-9]{4})"
      }
    }, {
      "name": "social_position",
      "constraints": {
        "required": false,
        "pattern": "(^$|S[0-9]{2}|unknown)"
      }
    }, {
      "name": "neibu_access",
      "constraints": {
        "required": false,
        "pattern": "(^$|yes|no|unknown)"
      }
    }, {
      "name": "source_1",
      "constraints": {
        "required": true,
        "pattern": "(^http.*|W[0-9]{4})"
      }
    }, {
      "name": "page_1",
      "constraints": {
        "required": false
      }
    }, {
      "name": "source_2",
      "constraints": {
        "required": false
      }
    }, {
      "name": "page_2",
      "constraints": {
        "required": false
      }
    }, {
      "name": "note",
      "description": "structural entry for internal notes",
      "constraints": {
        "required": false
      }
    },
    {
      "name": "created",
      "description": "structural entry creation date of entry",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#date"
      }
    },
    {
      "name": "created_by",
      "description": "structural entry acronym of project member creating entry",
      "constraints": {
        "required": true,
        "pattern": "[A-Z]{2}"
      }
    },
    {
      "name": "last_modified",
      "description": "structural entry last modification date",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#date"
      }
    },
    {
      "name": "last_modified_by",
      "description": "structural entry acronym of project member last modifying entry",
      "constraints": {
        "required": true,
        "pattern": "[A-Z]{2}"
      }
    }
  ],
  "primaryKey": ["person_id", "name_lang"],
  "missingValues": [""],
  "foreignKeys": [
    {
      "fields": "person_id",
      "reference": {
        "resource": "agent",
        "fields": "agent_id"
      }
    },
    {
      "fields": "place_of_birth",
      "reference": {
        "resource": "space",
        "fields": "space_id"
      }
    },
    {
      "fields": "social_position",
      "reference": {
        "resource": "social-position",
        "fields": "soc_pos_id"
      }
    },
    {
      "fields": "source_1",
      "reference": {
        "resource": "work",
        "fields": "work_id"
      }
    },
    {
      "fields": "name_lang",
      "reference": {
        "resource": "iso-lang-code",
        "fields": "iso_code"
      }
    }
  ]
}
